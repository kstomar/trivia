<!DOCTYPE html>
<html>
  <head>
    <title>TriviaRails</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if current_user %>
      Signed in as <%= current_user.name %> | <%= link_to "Logout", '/logout', class: 'btn btn-info' %>
    <% else %>
      <%= link_to 'Login', '/login', class: 'btn btn-info' %> | <%= link_to 'Signup', '/signup', class: 'btn btn-info' %>
    <% end %>
    <%= yield %>
  </body>
</html>
